<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/atlas_background_white"
    tools:context="com.layer.atlas.messenger.AtlasSettingsScreen">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.layer.atlas.messenger.AtlasSettingsScreen">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/atlas_screen_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/atlas_ctl_edit_text"
            android:hint="@string/text_hint_login"
            android:inputType="textCapSentences|textNoSuggestions"
            android:singleLine="true" />

        <EditText
            android:id="@+id/atlas_screen_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/atlas_ctl_edit_text"
            android:hint="@string/text_hint_password"
            android:inputType="textPassword"
            android:singleLine="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@android:color/transparent" />

        <Button
            android:id="@+id/atlas_screen_login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/atlas_background_gray"
            android:layout_gravity="bottom|center_horizontal"
            android:paddingBottom="@dimen/atlas_messenger_activity_vertical_margin"
            android:paddingTop="@dimen/atlas_messenger_activity_vertical_margin"
            android:text="@string/registration_button_text"
            android:textColor="@color/atlas_text_blue_bright" />
    </LinearLayout>

</FrameLayout>